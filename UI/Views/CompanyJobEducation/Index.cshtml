@model IEnumerable<CareerCloud.Pocos.CompanyJobEducationPoco>

@{
    ViewData["Title"] = "CompanyJobEducation";
}

<h1>CompanyJob Education</h1>.
<hr />
@{ if (Model.Count() > 0)
    {
        <div>
            <b>
                <a asp-controller="CompanyJob" asp-action="Index"
                   asp-route-id="@Model.FirstOrDefault().CompanyJob.Company">Back to CompanyJob</a>
            </b>
        </div>
    }
}
<hr />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyJob)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Major)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Importance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyJob.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
